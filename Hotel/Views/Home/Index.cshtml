<!--================Banner Area =================-->
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0"
             data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Relax Your Mind</h2>
                <h6>
                    Discover The Perfect Balance
                    Of Hospitality, Luxury And
                    Comfort.
                </h6>
                <p>
                    We are focused on providing clients with the highest level of comfort and excellent
                    affordable
                    rates
                </p>
                <a href="/bookingform" class="btn theme_btn button_hover">Book Now</a>
            </div>
        </div>
    </div>

</section>
<!--================Banner Area =================-->
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">
                Simplicity is the ultimate
                Watchword
            </h2>
        </div>
        <div class="row mb_30">
            @foreach (var roomType in ViewBag.RoomTypes)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            <img src="@roomType.ImagePath" alt="">
                            <a href="/BookingForm?roomType=@roomType.Id" class="btn theme_btn button_hover">Book Now</a>
                        </div>
                        <a href="#">
                            <h4 class="sec_h4">@roomType.Name</h4>
                        </a>
                        <h5>$@roomType.Price<small>/night</small></h5>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
<!--================ Facilities Area  =================-->
<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Royal Facilities</h2>
            <p>
                Enjoy your stay
                at our hotel
            </p>
        </div>

        <div class="inner-contain">
            <div class="main-wrapper">
                <div class="left-wrapper">
                    <div class="tab">
                        <h3>Restaurant</h3>
                        <p>You have access to the world state of art restaurants and bars at our hotel.</p>
                    </div>
                    <div class="tab">
                        <h3>Sports CLub</h3>
                        <p>
                            Usage of the Internet is becoming more common due to rapid advancement of technology and
                            power.
                        </p>
                    </div>
                    <div class="tab">
                        <h3>Swimming Pool</h3>
                        <p>Access to fitness and Spa is part of our hotel package when you make a booking.</p>
                    </div>
                </div>
                <div class="right-wrapper">
                    <img src="./image/food.jpeg" alt="cartabandonment" class="img center">
                    <img src="./image/sports.jpeg" alt="cartabandonment" class="img top">
                    <img src="./image/swimmingpool.jpeg" alt="cartabandonment" class="img bottom">

                </div>
            </div>
        </div>

    </div>
</section>
<!--================ Facilities Area  =================-->